<div class="container" style="margin: 4vh auto">
    <h2>agregar una nueva novedad</h2>
    <form action="/admin/adminMenu/agregar" method="post">
        <div class="mb-3">
            <input type="text" class="form-control" name="titulo" placeholder="titulo">
            <textarea type="text" class="form-control" placeholder="subtitulo" name="subtitulo"></textarea>
            <textarea type="text" class="form-control" placeholder="cuerpo" name="cuerpo"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
    {{#if error}}
        <p>{{message}}</p>
    {{/if}}
</div>